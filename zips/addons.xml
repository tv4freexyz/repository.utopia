    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">[B][COLOR dodgerblue]Utopia[/COLOR][/B] Wizard</summary>
    <description lang="en">[B][COLOR dodgerblue]Utopia[/COLOR][/B] Wizard offers many maintenance features, selective add-on data saving, and automated build installs.</description>
